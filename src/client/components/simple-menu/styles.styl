.menu {
  list-style: none;
  padding: 0;
  margin: 0 auto;
  width: 90%;
  background-color: #EEF3F7
  border-radius: 5px
  box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2)
  margin: 2rem
  padding: 2%

  li {
    margin: 0.5em;
    float: left;
  }

  a {
    padding: .5em 1em;
    display: block;
    background: #0076D7;
    color: #fff;
    font-family: jubilat;
    border: 1px solid #ccc;
    border-radius: 5px
    width: 100%;
  }

  &::after {
    clear: both;
    content: '';
    width: 0; height: 0;
    display: block;
  }
}
