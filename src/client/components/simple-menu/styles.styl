.menu {
  list-style: none;
  margin: 0;
  padding: 0;

  li {
    margin: 0.5em;
    float: left;
  }

  a {
    padding: 0.25em 0.25em;
    display: block;
    background: #aaa;
    width: 10em;
  }

  &::after {
    clear: both;
    content: '';
    width: 0; height: 0;
    display: block;
  }
}
